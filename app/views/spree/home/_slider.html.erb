<% if Spree::Slide.published.count > 0 %>
<div id="home-slider">
	<ul>
	<% Spree::Slide.published.order('position ASC').each do |s| %>
        <li>
          <h1><%= s.slide_name %></h1>
          <%= link_to image_tag(s.slide_image.url), url_for(s.slide_link) %>
        </li>
	<% end %>
	</ul>
</div>
<% end %>