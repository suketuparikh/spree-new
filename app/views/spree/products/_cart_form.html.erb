<script>
$( document ).ready(function() {
$("#add-to-cart-button").click(function(event){
    event.preventDefault();
  $.fancybox({
        'type': 'inline',
        'href': '#addtocart-popup'
    });
});

$("#add-to-cart-btn").click(function(event){
$( "#cartform" ).submit();
});

